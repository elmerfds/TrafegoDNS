# src/docker-s6/root/etc/services.d/trafegodns/check

#!/command/with-contenv bash

# Get API port or use default 3000
API_PORT=${API_PORT:-3000}

# Check if the API server is responding
if wget -q --spider http://localhost:${API_PORT}/api/health; then
  exit 0
else
  echo "API server is not responding on port ${API_PORT}"
  exit 1
fi